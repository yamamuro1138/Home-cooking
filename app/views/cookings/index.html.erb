<%= render "header"%>
<div class="main">
  <img src="https://cdn.pixabay.com/photo/2016/12/26/17/28/food-1932466_1280.jpg" alt="背景" class="background">
    <div class="itiran">
     <div class="title">
       <b>投稿一覧</b>
     </div>
      <ul class="cooking-lists">
          <% @cookings.each do |cooking|%> 
          <%= link_to cooking_path(cooking.id), class:"link" do %>
          <li class="list">
               <%=image_tag cooking.image, class:"item-img"%>
              <% end %>
              <h3 class="cook-name">
              <%= cooking.name %>
              </h3>
          </li>
          <% end %>
          <% if @cookings.length == 0 %>
          <li class="lists">
           <%= image_tag "https://cdn.pixabay.com/photo/2017/03/31/18/02/strawberry-dessert-2191973_1280.jpg", class:"cooking-kari-image"%>
             <h3 class="cooking-kari-name">
              料理投稿してね!
             </h3>
          </li>
          <% end %>
      </ul>
    </div>
</div>
<%= render "footer"%> 
